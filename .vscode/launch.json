{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Debug Build Script (package)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build",
                "--preserve-symlinks"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\packages\\package"
        },
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/browser"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/browser/dist/**/*.js"
            ],
            "preLaunchTask": "build-extension",
            "cwd": "${workspaceFolder}/packages/browser"
        }, {
            "name": "Debug Xtension Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start",
            "cwd": "${workspaceFolder}/packages/xtension"
        }, {
            "type": "node",
            "request": "launch",
            "name": "Run Package Sample",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev",
                "--preserve-symlinks"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/packages/package-sample"
        }, {
            "type": "node",
            "request": "launch",
            "name": "Run sdk test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev",
                "--preserve-symlinks"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/packages/sdk-test"
        }
    ]
}