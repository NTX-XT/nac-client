// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [{
		"type": "npm",
		"script": "build:dev",
		"group": "build",
		"problemMatcher": [],
		"label": "build-extension",
		"options": {
			"cwd": "${workspaceFolder}/packages/explorer"
		}
	}, {
		"type": "func",
		"command": "host start",
		"problemMatcher": "$func-node-watch",
		"isBackground": true,
		"dependsOn": "npm build (functions)",
		"options": {
			"cwd": "${workspaceFolder}/packages/xtension/src"
		}
	}, {
		"type": "shell",
		"label": "npm build (functions)",
		"command": "npm run build",
		"dependsOn": "npm install (functions)",
		"problemMatcher": "$tsc",
		"options": {
			"cwd": "${workspaceFolder}/packages/xtension"
		}
	}, {
		"type": "shell",
		"label": "npm install (functions)",
		"command": "npm install",
		"options": {
			"cwd": "${workspaceFolder}/packages/xtension"
		}
	}, {
		"type": "shell",
		"label": "npm prune (functions)",
		"command": "npm prune --production",
		"dependsOn": "npm build (functions)",
		"problemMatcher": [],
		"options": {
			"cwd": "${workspaceFolder}/packages/xtension"
		}
	}]
}