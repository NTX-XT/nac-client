{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./packages",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "es6", "dom"
        ],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "**/*/lib", "**/*/dist", "__template__"],
    "paths": {
        "@base/*": ["./*"]
    }
}